# ComicWise local environment example
# Copy this file to `.env.local` for local development and fill any secrets.

# App
NODE_ENV=development
PORT=3000
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Database (local Postgres)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/comicwise_dev

# Optional: Neon (if used)
NEON_DATABASE_URL=

# Auth
AUTH_SECRET=change-me-to-a-secure-secret-32chars
AUTH_URL=http://localhost:3000

# Upload provider: imagekit | cloudinary | local
UPLOAD_PROVIDER=local

# Cloudinary (optional)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# ImageKit (optional)
IMAGEKIT_PUBLIC_KEY=
IMAGEKIT_PRIVATE_KEY=
IMAGEKIT_URL_ENDPOINT=

# Email (for local dev you can use MailHog or smtp4dev)
EMAIL_SERVER_HOST=localhost
EMAIL_SERVER_PORT=1025
EMAIL_SERVER_USER=
EMAIL_SERVER_PASSWORD=
EMAIL_FROM=noreply@comicwise.local

# Upstash Redis (optional - rate limiting)
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# BullMQ / Redis (local)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# QStash (optional)
QSTASH_TOKEN=
QSTASH_URL=
